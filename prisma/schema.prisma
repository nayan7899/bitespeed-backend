datasource db {
  provider = "sqlite" 
}
generator client {
  provider = "prisma-client-js"
  // uses PrismaConfig for datasource URL
}

model Contact {
  id             Int      @id @default(autoincrement())
  email          String?
  phoneNumber    String?
  linkedId       Int?
  linkPrecedence String   // "primary" | "secondary"
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  deletedAt      DateTime?

  primaryContact   Contact?  @relation("Link", fields: [linkedId], references: [id])
  secondaryContacts Contact[] @relation("Link")

  @@index([email])
  @@index([phoneNumber])
}